                <input type="number" name="numberOfPages" id="number-of-pages" placeholder="Number of pages" min="1" /><br>
                <label for="rating">Rating: </label>
                <input type="number" name="rating" id="rating" placeholder="number(0-5)" min="1" max="5" /><br>
                <label for="synopsis">Synopsis: </label>
                <textarea name="synopsis" id="synopsis" placeholder="Synopsis"></textarea><br>
                <label for="comic-image">Image:</label>
                <input type="text" name="comic-image" id="comic-image" />
